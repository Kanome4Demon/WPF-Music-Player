<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ✅ 修正版  -->
    <Style x:Key="CreateButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="65" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Background" Value="#333333" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid">
                        <!--  用 SolidColorBrush 包装内部背景，允许动画  -->
                        <Border x:Name="ButtonBorder" CornerRadius="14">
                            <Border.Background>
                                <SolidColorBrush Color="#333333" />
                            </Border.Background>
                        </Border>

                        <StackPanel
                            Margin="0,0,1,1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor=""
                            Orientation="Horizontal">
                            <Border
                                x:Name="PlusIconBorder"
                                Width="12"
                                Height="12"
                                Margin="0,0,5,0"
                                RenderTransformOrigin="0.5,0.5">
                                <Border.Background>
                                    <SolidColorBrush x:Name="PlusIconBrush" Color="#8e8e8e" />
                                </Border.Background>
                                <Border.RenderTransform>
                                    <RotateTransform x:Name="PlusIconRotate" Angle="0" />
                                </Border.RenderTransform>
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="pack://application:,,,/WPFMusicPlayerDemo;component/Assets/Images/Icons/add.png" />
                                </Border.OpacityMask>
                            </Border>

                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="White"
                                Text="创建" />
                        </StackPanel>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="ButtonBorder"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#232323"
                                            Duration="0:0:0.1" />
                                        <ColorAnimation
                                            Storyboard.TargetName="PlusIconBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#8e8e8e"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="ButtonBorder"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#323232"
                                            Duration="0:0:0.2" />
                                        <ColorAnimation
                                            Storyboard.TargetName="PlusIconBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="White"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="ButtonBorder"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#464646"
                                            Duration="0:0:0.05" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

