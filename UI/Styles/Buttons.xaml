                                        <ColorAnimation
                                            Storyboard.TargetName="IconBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#CCCCCC"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="0"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>

                                <!--  悬停  -->
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="IconBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#d9d9d9"
                                            Duration="0:0:0.2" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="1.06"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="1.06"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.BlurRadius)"
                                            To="3"
                                            Duration="0:0:0.1" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="Effect.(DropShadowEffect.Opacity)"
                                            To="0.2"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </VisualState>

                                <!--  按下  -->
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="IconBrush"
                                            Storyboard.TargetProperty="Color"
                                            To="#bfbfbf"
                                            Duration="0:0:0.05" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                            To="0.98"
                                            Duration="0:0:0.05" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="Icon"
                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                            To="0.98"
                                            Duration="0:0:0.05" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

